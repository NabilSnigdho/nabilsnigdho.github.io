---
import { ClientRouter } from 'astro:transitions'
import ThemeIcon from '@/components/ThemeIcon.astro'
import { sentenceCase } from 'change-case'
import '../styles/global.css'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Nabil's portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
		{/* This is intentionally inlined to avoid FOUC. */}
		<script is:inline>
			const theme = window.localStorage?.getItem('theme')
			if (
				theme === 'dark' ||
				(theme !== 'light' &&
					window.matchMedia('(prefers-color-scheme: dark)').matches)
			)
				document.documentElement.classList.add('dark')
		</script>
	</head>
	<body class="dark:bg-neutral-900 dark:text-white">
		<header>
			<nav class="mx-auto flex max-w-5xl flex-wrap items-center gap-4 p-4">
				<a
					href="/"
					class="mr-auto flex items-center gap-2 max-lg:font-bold lg:text-xl"
				>
					<img
						src="/favicon.svg"
						width="32"
						height="32"
						alt="logo"
						class="rounded"
					/>
					nabilSnigdho
				</a>
				<div
					class="flex flex-wrap items-center gap-4 max-sm:order-last max-sm:w-full"
				>
					{
						[
							{ name: 'Home', path: '/' },
							{ path: '/posts/' },
							{ path: '/projects/' },
						].map(({ path, name }) => (
							<a
								href={`${path}`}
								class:list={[
									Astro.url.pathname === path &&
										'underline decoration-2 underline-offset-8',
								]}
							>
								{name ?? sentenceCase(path)}
							</a>
						))
					}
				</div>
				<ThemeIcon />
			</nav>
		</header>
		<main
			class="prose lg:prose-xl dark:prose-invert mx-auto p-4"
			transition:animate="fade"
		>
			<slot />
		</main>
	</body>
</html>
