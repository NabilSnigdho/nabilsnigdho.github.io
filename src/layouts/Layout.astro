---
import ThemeIcon from '@/components/ThemeIcon.astro'
import { ViewTransitions } from 'astro:transitions'
import { sentenceCase } from 'change-case'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    {/* This is intentionally inlined to avoid FOUC. */}
    <script is:inline>
      const theme = window.localStorage?.getItem('theme')
      if (
        theme === 'dark' ||
        (theme !== 'light' &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      )
        document.documentElement.classList.add('dark')
    </script>
  </head>
  <body class="dark:(bg-neutral-900 text-white)">
    <header>
      <nav
        class="mx-auto flex max-w-screen-lg flex-wrap items-center gap-4 p-4"
      >
        <a
          href="/"
          class="lt-lg:font-bold mr-auto flex items-center gap-2 lg:text-xl"
        >
          <img
            src="/favicon.svg"
            width="32"
            height="32"
            alt="logo"
            class="rounded"
          />
           nabilSnigdho
        </a>
        <div
          class="lt-sm:(w-full order-last) flex flex-wrap items-center gap-4"
        >
          {
            [
              { name: 'Home', path: '/' },
              { path: '/posts/' },
              { path: '/projects/' },
            ].map(({ path, name }) => (
              <a
                href={`${path}`}
                class:list={[
                  Astro.url.pathname === path &&
                    'underline-2 underline underline-offset-8',
                ]}
              >
                {name ?? sentenceCase(path)}
              </a>
            ))
          }
        </div>
        <ThemeIcon />
      </nav>
    </header>
    <main class="prose mx-auto max-w-prose p-4" transition:animate="slide">
      <slot />
    </main>
  </body>
</html>
