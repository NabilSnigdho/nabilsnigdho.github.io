---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'button'>

const { ...attrs } = Astro.props
---

<li class="group">
	<button
		role="menuitem"
		tabindex="-1"
		class:list={[
			'dropdown-item flex w-full items-center gap-2 px-4 py-2 text-left',
			'hover:(bg-zinc-100 dark:(bg-zinc-600 text-white))',
			'focus:(bg-zinc-100 dark:(bg-zinc-600 text-white))',
			'dark:group-[.active]:(bg-zinc-500 text-white) group-[.active]:bg-zinc-200',
		]}
		{...attrs}
	>
		<slot />
	</button>
</li>
